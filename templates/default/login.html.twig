{% extends 'base.html.twig' %}

{% block body %}

    <!-- contenu principal de la page -->
    <div class="maincontent-area">
        <div class="zigzag-bottom"></div>
        <div class="container">

            <!-- formulaire de connection -->
            <form class="login-form" method="post" action="{{ path('login', ['login']) }}">
                <!-- message d'erreur -->
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <label for="email"></label><input type="text" name="email" id="email" placeholder="email" required/>
                <label for="password"></label><input type="password" name="password" id="password" placeholder="password" required/>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" value="Se connecter">Se connecter</button>

            </form>

            <!-- lien pour se rendre Ã  la page d'inscription -->
            <p><a href="{{ url('register') }}">Pas encore de compte ? Cliquez ici.</a></p>

        </div>
    </div>

{% endblock %}